            <Image  Width="26" Height="27" Canvas.Right="13" Canvas.Top="7"  Source="Images/login/close.png" 
                   MouseLeftButtonDown="Image_MouseDown"  Cursor="Hand">
            </Image>
           
            <TextBox  Background="Transparent" Width="240" Height="22" Canvas.Left="84"  MouseEnter="currentPass_MouseEnter" 
                      KeyDown="currentPass_KeyDown"  MouseLeave="currentPass_MouseLeave" FontSize="16"
                     Canvas.Top="85" BorderThickness="0" Foreground="#959595" Padding="10 0 0 0" Text="Current Password"  
                    Name="currentPass" ></TextBox>       
           

            <Image  Width="12" Height="12" Canvas.Top="90" Canvas.Left="412" Name="failedCurrent"
                    Source="Images/register_key/close.png" > </Image>
            <Image  Width="12" Height="12" Canvas.Top="90" Canvas.Left="412" Visibility="Hidden" 
                    Name="CurrentOk" > </Image>

            
            

            <TextBox    Background="Transparent" Width="240" Height="22" Canvas.Left="84"  FontSize="16" 
                        MouseLeave="userpass_MouseLeave"       MouseEnter="userpass_MouseEnter"
                        Canvas.Top="137" BorderThickness="0" Foreground="#959595" Padding="10 0 0 0"  Text="New Password" 
                        KeyDown="userpass_KeyDown" 
                    Name="userpass"  ></TextBox>

            <Image  Width="12" Height="12" Canvas.Top="141" Canvas.Left="412" Name="failedNewCurrent"
