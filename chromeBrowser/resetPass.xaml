                    </Image.Style>
                </Image>

                <Image Canvas.Left="238" Canvas.Top="0" Height="24" Name="logo" Width="24" >
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="Images/search/searchMainIcon.png"/>
