<Window x:Class="chromeBrowser.anti_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="anti_window" Height="261" Width="599"
        AllowsTransparency="True" WindowStyle="None"
        Background="Transparent" Topmost="True" Icon="Images/cloud_norm-over.ico">
    <Grid>
        <Canvas Margin="0,0,0,0" Width="599" Height="261">
            <Canvas.Background>
                <ImageBrush ImageSource="Images/login/virus_bg.png">
                </ImageBrush>
            </Canvas.Background>

            <Image  Width="26" Height="27" Canvas.Right="13" Canvas.Top="7"  
                        Source="Images/login/close.png" 
                   MouseLeftButtonDown="minClose_MouseLeftButtonDown"  Cursor="Hand" Name="minClose">
            </Image>

            <Image  Width="189" Height="39" Canvas.Left="205" Canvas.Top="200"  
                        Source="Images/login/websitLink.png" 
                   MouseLeftButtonDown="linkbtn_MouseLeftButtonDown"  Cursor="Hand" Name="linkbtn">
            </Image>

            <Image  Width="217" Height="18" Canvas.Left="150" Canvas.Top="143"  
                        Source="Images/login/virus_link.png" 
                   MouseLeftButtonDown="linkbtn_MouseLeftButtonDown"  Cursor="Hand" Name="virus_link">
            </Image>
            
        </Canvas>
    </Grid>
</Window>
