<Window x:Class="chromeBrowser.usb.deleteMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="deleteMenu" Height="40" Width="40"
        MouseDown="Window_MouseDown"   BorderBrush="Black"    
        BorderThickness="0"  AllowsTransparency="True" WindowStyle="None" Background="White">
    <Grid>
       <Image Height="40"  Width="40" Name="delBtn" >
            <Image.Style>
                <Style TargetType="{x:Type Image}">
                    <Setter Property="Source" Value="../Images/usb/bin.png" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Source" Value="../Images/usb/binDown.png" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
    </Grid>
</Window>
