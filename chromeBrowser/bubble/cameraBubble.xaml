<Window x:Class="chromeBrowser.bubble.cameraBubble"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="Transparent"   MouseLeave="Window_MouseLeave"     
        BorderThickness="0"  AllowsTransparency="True" WindowStyle="None"
        Title="cameraBubble" Height="208" Width="403">
    <Grid Background="Transparent" >
        <Canvas Margin="0 0 0 0" Height="208" Width="403">
            
            <Canvas.Background>
                <ImageBrush ImageSource="../Images/bubble/spyCam_bg.png">
                </ImageBrush>
            </Canvas.Background>

            <Image Source="../Images/bubble/player.png" Width="82" Height="74" Canvas.Left="15" Canvas.Top="64"/>
            <CheckBox Content="Do not show me Again" Canvas.Left="19" Canvas.Top="165" FontSize="13" Name="isCamCls"/>
            

            <Image  Height="39" Name="bubble_close" Width="178" Canvas.Right="26" Canvas.Bottom="15" MouseDown="bubble_close_MouseDown"
                    Source="../Images/bubble/tutorial_cls.png" />
               
               
        </Canvas>
    </Grid>
</Window>