<Window x:Class="chromeBrowser.bubble.usbBubble"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MouseLeave="Window_MouseLeave"
        BorderThickness="0"  AllowsTransparency="True" WindowStyle="None"
        Title="usbBubble" Height="285" Width="269" Background="Transparent">
    <Grid Background="Transparent" >
        <Canvas  Margin="0 0 0 0" Height="285" Width="269">
            <Canvas.Background>
                <ImageBrush ImageSource="../Images/bubble/view_up.png">
                </ImageBrush>
            </Canvas.Background>
            <Image Source="../Images/bubble/player.png" Width="82" Height="74" Canvas.Left="15" Canvas.Top="65"/>
            <CheckBox Content="Do not show me Again" Canvas.Left="55" Canvas.Top="198" FontSize="13" Name="isCamCls"/>

            <Image  Height="39" Name="bubble_close" Width="178" Canvas.Right="50" Canvas.Bottom="17" MouseDown="bubble_close_MouseDown"
                    Source="../Images/bubble/tutorial_cls.png"/>
        </Canvas>
    </Grid>
</Window>
