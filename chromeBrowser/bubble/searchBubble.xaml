<Window x:Class="chromeBrowser.searchBubble"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="Transparent"    MouseLeave="Window_MouseLeave"    
        BorderThickness="0"  AllowsTransparency="True" WindowStyle="None"
        Title="searchBubble" Height="285" Width="269">
    <Grid Background="Transparent" >
        <Canvas  Margin="0 0 0 0" Height="285" Width="269">
            <Canvas.Background>
                <ImageBrush ImageSource="../Images/bubble/click_bg.png">
                </ImageBrush>
            </Canvas.Background>

            <Image Source="../Images/bubble/player.png" Width="82" Height="74" Canvas.Left="15" Canvas.Top="65"/>
            <CheckBox Content="Do not show me Again" Canvas.Left="55" Canvas.Top="204" FontSize="13" Name="isCamCls"/>


            <Image  Height="39" Name="bubble_close" Width="178" Canvas.Right="45" Canvas.Bottom="14" MouseDown="bubble_close_MouseDown"
                    Source="../Images/bubble/tutorial_cls.png" />
        </Canvas>
    </Grid>
</Window>
