<Window x:Class="chromeBrowser.forgotPass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         WindowStyle="None"  BorderThickness="0" BorderBrush="Black"   AllowsTransparency="True"
         Height="179" Width="484"  Left="400" Top="400" Icon="Images/cloud_norm-over.ico"
        Title="forgotPass" Topmost="True">
    <Grid>
        <Canvas       Height="179">
            <Canvas.Background>
                <ImageBrush ImageSource="Images/login/forgot_bg.png">
                </ImageBrush>
            </Canvas.Background>



            <Image  Width="26" Height="27" Canvas.Right="13" Canvas.Top="7"  Source="Images/login/close.png" 
                    MouseLeftButtonDown="Image_MouseLeftButtonDown" Cursor="Hand"  >
            </Image>


            <Image  Width="187" Height="39" Canvas.Top="122" Canvas.Left="252" 
                    Source="Images/login/forgot_sub.png"  Name="yesBtn" Cursor="Hand"  >
            </Image>

            <Image  Width="153" Height="13" Canvas.Top="134" Canvas.Left="49" 
                    Source="Images/register_key/return.png" Cursor="Hand" Name="noBtn"  ></Image>           

            
        </Canvas>
    </Grid>
</Window>
